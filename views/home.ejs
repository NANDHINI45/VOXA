<%- include('partials/header') %>

    <div class="hero-section">
        <div class="container">
            <h1>Your Digital Space</h1>
            <p class="lead" style="font-size: 1.25rem; color: var(--text-secondary);">Manage your day, capture memories,
                and stay organized.</p>
        </div>
    </div>

    <div class="container">
        <div class="grid-cards">
            <a href="/diary" class="card"
                style="text-decoration: none; text-align: center; display: flex; flex-direction: column; align-items: center; justify-content: center;">
                <div
                    style="background: rgba(67, 97, 238, 0.1); padding: 1.5rem; border-radius: 50%; margin-bottom: 1.5rem;">
                    <i class="fas fa-book fa-3x" style="color: var(--primary);"></i>
                </div>
                <h3>Diary</h3>
                <p>Mark your daily experience here</p>
                <span class="btn btn-primary" style="margin-top: 1rem; width: 100%;">Open Diary</span>
            </a>

            <a href="/gallery" class="card"
                style="text-decoration: none; text-align: center; display: flex; flex-direction: column; align-items: center; justify-content: center;">
                <div
                    style="background: rgba(247, 37, 133, 0.1); padding: 1.5rem; border-radius: 50%; margin-bottom: 1.5rem;">
                    <i class="fas fa-images fa-3x" style="color: var(--accent);"></i>
                </div>
                <h3>Gallery</h3>
                <p>Save your memories here</p>
                <span class="btn btn-primary" style="margin-top: 1rem; width: 100%;">View Photos</span>
            </a>

            <a href="/notes" class="card"
                style="text-decoration: none; text-align: center; display: flex; flex-direction: column; align-items: center; justify-content: center;">
                <div
                    style="background: rgba(114, 9, 183, 0.1); padding: 1.5rem; border-radius: 50%; margin-bottom: 1.5rem;">
                    <i class="fas fa-clipboard-list fa-3x" style="color: var(--secondary);"></i>
                </div>
                <h3>Notes</h3>
                <p>Make a todo list to complete your work</p>
                <span class="btn btn-primary" style="margin-top: 1rem; width: 100%;">Manage Tasks</span>
            </a>
        </div>
    </div>

    <%- include('partials/footer') %>
