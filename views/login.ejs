<style>
   /* Override Styles for Homepage and Login Page */

/* Body Styles */
body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background: linear-gradient(135deg, #5f9bc6, #bbdefb);
    font-family: 'Poppins', sans-serif;
}

/* Container Styles */
.container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    max-width: 1200px;
    width: 100%;
    padding: 20px;
    gap: 20px;
}

/* Box Styles */
.box {
    flex: 1;
    min-width: 300px;
    max-width: 350px;
    padding: 30px;
    border-radius: 15px;
    text-align: center;
    background: white;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.box:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3);
}

/* Icon Styles */
.box i {
    color: #007bff;
    font-size: 60px;
    margin-bottom: 15px;
    transition: color 0.3s ease;
}

.box:hover i {
    color: #0056b3;
}

/* Heading and Paragraph Styles */
.box h1 {
    font-size: 28px;
    color: #333;
    margin: 15px 0;
}

.box p {
    font-size: 16px;
    color: #555;
    margin-bottom: 20px;
}

/* Button Styles */
.box .btn {
    background: #007bff;
    color: white;
    border: none;
    padding: 10px 25px;
    border-radius: 5px;
    text-decoration: none;
    font-size: 16px;
    transition: background 0.3s ease;
}

.box .btn:hover {
    background: #0056b3;
}

/* Horizontal Rule Styles */
hr {
    margin: 20px 0;
    border: 0;
    border-top: 1px solid #ddd;
}

/* Login Page Styles */
.login {
    background: white;
    padding: 40px;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
    border-radius: 15px;
    max-width: 400px;
    width: 100%;
    text-align: center;
}

.login h1 {
    font-size: 28px;
    color: #333;
    margin-bottom: 20px;
}

.form-group {
    margin-bottom: 20px;
    text-align: left;
}

label {
    font-size: 14px;
    color: #555;
    margin-bottom: 5px;
    display: block;
}

input.form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
}

input.form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
    outline: none;
}

button.btn {
    background: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s ease;
}

button.btn:hover {
    background: #0056b3;
}

.card {
    border: none;
    border-radius: 8px;
}

.card-body {
    padding: 20px;
}

a.btn {
    display: block;
    text-align: center;
    color:#ccc;
    background:#333;
    border: 1px solid #ddd;
    padding: 10px;
    font-size: 16px;
    border-radius: 5px;
    text-decoration: none;
    transition: background 0.3s, border-color 0.3s;
}

a.btn:hover {
    background: #5f56b1;
    border-color: #ccc;
}

a.btn .fab {
    margin-right: 10px;
    font-size: 18px;
}

/* Responsive Design */
@media (max-width: 768px) {
    .box {
        min-width: 100%;
    }

    .login {
        padding: 20px;
    }
}


</style>

<body>
<div class="login">
    <h1>Login</h1>

    <div class="row">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-body">
                    <!----Makes Post request to /login route-->
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="username">
                        </div>
                        <div class="form-group">
                            <label for="password">password</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-dark">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <a class="btn btn-block" href="/auth/google" role="button">
          <i class="fab fa-google"></i>
          Sign In with Google
        </a>
      </div>
    </div>
  </div>
</body>