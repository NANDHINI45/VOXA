<%- include('partials/header') %>

    <div class="container" style="padding-top: 2rem;">

        <div
            style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
            <h1>Your Memories</h1>
            <button onclick="document.getElementById('uploadSection').scrollIntoView({behavior: 'smooth'})"
                class="btn btn-primary">
                <i class="fas fa-cloud-upload-alt"></i> Upload New
            </button>
        </div>

        <div class="grid-cards" style="grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));">
            <% if (images.length> 0) { %>
                <% images.forEach(image=> { %>
                    <div class="card"
                        style="padding: 0; overflow: hidden; display: flex; flex-direction: column; transition: var(--transition);">
                        <div style="height: 250px; overflow: hidden; position: relative;">
                            <img src="/uploads/<%= image.file_name %>" alt="Memory"
                                style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s;">
                        </div>
                        <div style="padding: 1.5rem; flex: 1; display: flex; flex-direction: column;">
                            <p style="flex: 1; font-size: 1.1rem; color: var(--text-main); margin-bottom: 1rem;">
                                <%= image.content || 'Untitled Memory' %>
                            </p>

                            <div
                                style="display: flex; justify-content: flex-end; align-items: center; margin-top: auto;">

                                <form action="/images/<%= image.id %>?_method=DELETE" method="POST" style="margin: 0;">
                                    <button type="submit" class="btn btn-danger"
                                        style="padding: 0.5rem 1rem; font-size: 0.9rem;">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div
                                style="grid-column: 1 / -1; text-align: center; padding: 4rem; background: var(--surface); border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
                                <i class="fas fa-images"
                                    style="font-size: 4rem; color: var(--text-secondary); margin-bottom: 1rem; opacity: 0.5;"></i>
                                <p class="lead">No photos yet. Capture some moments!</p>
                            </div>
                            <% } %>
        </div>

        <div id="uploadSection" class="card"
            style="margin-top: 4rem; max-width: 600px; margin-left: auto; margin-right: auto; scroll-margin-top: 100px;">
            <h2 style="text-align: center; margin-bottom: 1.5rem;">Upload New Memory</h2>
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <div class="input-group">
                    <label for="image">Choose Image</label>
                    <input type="file" name="image" id="image" class="form-control" required style="padding: 0.5rem;">
                </div>
                <div class="input-group">
                    <label for="content">Description</label>
                    <textarea name="content" id="content" class="form-control" rows="3"
                        placeholder="What's this memory about?"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 1rem;"><i
                        class="fas fa-upload"></i> Upload Photo</button>
            </form>
        </div>

    </div>

    <%- include('partials/footer') %>
